<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CodingChallenge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <style name="Theme.CodingChallenge" parent="Base.Theme.CodingChallenge" >

    </style>

    <style name="Theme.CodingChallenge.Text.Title" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CodingChallenge.Text.Title.Error" parent="Theme.CodingChallenge.Text.Title">
        <item name="android:textColor">@color/crimson_red</item>
    </style>

    <style name="Theme.CodingChallenge.Text.Body.Large" parent="TextAppearance.AppCompat.Large.Inverse">
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CodingChallenge.Widget.Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Theme.CodingChallenge.Text.Body.Large</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>
</resources>