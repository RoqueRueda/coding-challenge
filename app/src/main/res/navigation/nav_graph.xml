<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/IpcFragment">

    <fragment
        android:id="@+id/IpcFragment"
        android:name="com.roque.rueda.gbm.coding.challenge.ipc.IpcFragment"
        android:label="@string/ipc_fragment_label"
        tools:layout="@layout/fragment_ipc">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.roque.rueda.gbm.coding.challenge.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/IpcFragment" />
    </fragment>
</navigation>